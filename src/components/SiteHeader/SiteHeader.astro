---
import SkipLink from "@components/SkipLink/SkipLink.astro";
import SiteNavigation from "@components/SiteNavigation/SiteNavigation.astro";
---

<header role="banner">
    <SkipLink />
    <SiteNavigation />
</header>

<style>
    header {
        background: var(--color-primary-shade);
        color: var(--color-light);
        box-shadow:
            0 0.25rem var(--color-primary),
            0 0.5rem var(--color-secondary),
            0 0.75rem var(--color-tertiary);
        padding-block: var(--space-s) var(--space-xs);
    }
</style>
