---
import type { CollectionEntry } from "astro:content";
import Card from "@components/Cards/Card.astro";
import {
    projectCollections,
    type ProjectCollectionKey,
} from "@data/projectCollections";

type ProjectCollection =
    | "projectsAssessment"
    | "projectsCreativeClub"
    | "projectsData"
    | "projectsMathEd"
    | "projectsWebDev";

interface Props {
    project: CollectionEntry<ProjectCollection>;
    collectionKey: ProjectCollectionKey;
}

const { project, collectionKey } = Astro.props;
const basePath = `/projects/${projectCollections[collectionKey].path}`;
---

<Card
    title={project.data.title}
    url={`${basePath}/${project.id}`}
    description={project.data.description}
    pubDate={project.data.pubDate}
    tags={project.data.tags}
    headingLevel={3}
/>
