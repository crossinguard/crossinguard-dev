---
import Icon from "@components/global/Icon.astro";
import envelope from "@icons/envelope.svg";
import codeberg from "@icons/codeberg.svg";

const today = new Date();
---

<footer>
    <p>W. Brett Egbert &copy; {today.getFullYear()}</p>
    <p><em>stay curious</em></p>
    <ul class="social cluster">
        <li>
            <a
                href="mailto:brett@crossinguard.dev"
                target="_blank"
                rel="noopener noreferrer"
            >
                <Icon icon={envelope} text="Email" variant="stacked" />
            </a>
        </li>
        <li>
            <a
                href="https://codeberg.org/crossinguard"
                target="_blank"
                rel="noopener noreferrer"
            >
                <Icon icon={codeberg} text="Codeberg" variant="stacked" />
            </a>
        </li>
    </ul>
</footer>

<style>
    footer {
        padding-block: var(--space-xl);
        background: var(--color-primary-shade);
        color: var(--color-light);
        font-family: monospace;
        font-size: var(--step--1);
        font-weight: 400;
        box-shadow:
            0 -0.25rem var(--color-primary),
            0 -0.5rem var(--color-secondary),
            0 -0.75rem var(--color-tertiary);
        text-align: center;
    }

    .social {
        --cluster-horizontal-alignment: center;
        padding-inline: 0;
    }

    .social li {
        list-style: none;
    }

    .social a {
        text-decoration: none;
    }

    .social a:hover {
        text-decoration: underline;
        text-decoration-color: var(--color-secondary);
        text-decoration-thickness: 3px;
        text-underline-offset: 3px;
        font-weight: 700;
    }
</style>
