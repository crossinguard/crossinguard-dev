---
import Card from "@components/global/Card.astro";

interface Props {
    title: string;
    description: string;
    pubDate: Date;
    id: string;
    tags?: string[];
}

const { title, description, pubDate, id, tags } = Astro.props;
---

<Card
    title={title}
    url={`/posts/${id}`}
    description={description}
    pubDate={pubDate}
    tags={tags}
/>
